package P488;

public class LoginEx {

	public static void main(String[] args) {
		try {
			login("blue", "12345");
			login("White", "12345");
			login("blue", "54321");	
		} catch(Exception e) {
			System.out.println(e.getMessage()+"1");
			System.out.println(e.getLocalizedMessage()+"2");
		}
		
	}

	private static void login(String id, String password) throws NotExistIdException, WrongPasswordException {
		if( !id.equals("blue")) {
			//예외 발생
			throw new NotExistIdException("아이디가 존재하지 않습니다.");
		}
		if( !password.equals("12345")) {
			//예외 발생
			throw new WrongPasswordException("패스워드가 틀립니다.");
	}
		if( id.equals("blue") && password.equals("12345")) {
			System.out.println(id"님 로그인 하셨습니다.");
}
}