		int menu;
		while(true) {
			System.out.println("원하는 항목을 선택하세요");
			System.out.print("1. 입금, 2. 출금, 3. 잔액 확인, 4. 종료 : ");
			menu = sc.nextInt();
			switch(menu) {
				case 1 : 
					System.out.println("입금");
					deposit(account); break; //객체 사용 2.함수 사용할때 제공한다.
				case 2 :
					System.out.println("출금");
					withdraw(account); break;
				case 3 : 
					System.out.println("잔액 확인");
					allPrint(account); break;
				case 4 : break;
			
			
		}
		
		try {
			account.deposit(account); //예금
			System.out.println("예금액 : " + account.getBalance());
			account.wihthdraw(25000);
			System.out.println("잔액 : " + account.getBalance());
		} catch(InsufficientEx e) {
			e.printStackTrace();
		} catch(DepositException e1) {
			e1.printStackTrace();
	}
	}
}

